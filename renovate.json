{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableRateLimiting",
    ":enableVulnerabilityAlertsWithLabel(High priority)",
    "group:allNonMajor",
    "docker:pinDigests",
    "docker:enableMajor"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": true,
  "rebaseStalePrs": true,
  "separateMultipleMajor": false,
  "separateMinorPatch": false,
  "ignoreTests": true,
  "assignees": [
    "cleverer"
  ],
  "docker": {
    "digest": {
      "groupName": "All Docker Digests",
      "groupSlug": "all-docker-digests"
    }
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}